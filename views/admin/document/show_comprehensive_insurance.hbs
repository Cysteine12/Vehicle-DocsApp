<div class="container2">
    <!--Navigation-->
    {{> _admin_navigation}}

    <!--Main-->
    <div class="main">
        <!--Error Alert-->
        {{#if msg}}
        <div class="alert color-success" id="alert">
            <span class="alert-text">{{msg}}</span>
            <span class="cancel">x</span>
        </div>
        {{/if}}

        <!--topbar-->
        {{> _admin_topbar}}

        <!--data list-->
        <div class="details content_box">
            <div class="recentOrders">
                <table border="1">
                    <thead>
                        <tr>
                            <td>NAME</td>
                            <td>DETAILS</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Type Of Document</td>
                            <td>{{document.docType}}</td>
                        </tr>
                        <tr>
                            <td>Vehicle Category</td>
                            <td>{{document.data.vehicle_category}}</td>
                        </tr>
                        <tr>
                            <td>Use Of Vehicle</td>
                            <td>{{document.data.vehicle_use}}</td>
                        </tr>
                        <tr>
                            <td>Price Of Vehicle</td>
                            <td>{{document.data.vehicle_price}}</td>
                        </tr>
                        <tr>
                            <td>Insurance Company</td>
                            <td>{{document.data.insurance_company}}</td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td class="capitalize">
                                {{document.status}}
                                {{#if completeCheck}}
                                <form action="/admin/document/comprehensive-insurance/{{document._id}}" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    <select name="status">
                                        <option hidden selected disabled>Update Status</option>
                                        <option value="rejected">Rejected</option>
                                        <option value="processing">Processing</option>
                                        <option value="completed">Completed</option>
                                    </select>
                                    <input type="submit" value="Update Application">
                                </form>
                                {{/if}}
                            </td>
                        </tr>
                        <tr>
                            <td>Delivery Location</td>
                            <td>{{document.data.location}}</td>
                        </tr>
                        <tr>
                            <td>Date Submitted</td>
                            <td>{{formatDate document.updatedAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                        </tr>
                    </tbody>
                </table>
                
                <div>
                    <div>Uploads:</div>
                    <input type="file" name="photo" class="filepond pond" title="Upload" required>
                </div>
                <br>
                {{#if deleteCheck}}
                <div>
                    <form action="/document/comprehensive-insurance/{{document._id}}" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Delete Form">
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>