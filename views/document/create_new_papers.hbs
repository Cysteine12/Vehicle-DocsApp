<div class="container2">
    <!--Navigation-->
    {{> _navigation}}

    <!--Main-->
    <div class="main">
        <!--Error Alert-->
        {{#if msg}}
        <div class="alert color-success" id="alert">
            <span class="alert-text">{{msg}}</span>
            <span class="cancel">x</span>
        </div>
        {{/if}}

        <!--topbar-->
        {{> _topbar}}

        <!--Form-->
        <div class="formcard">
            <div class="formcardheader">
                <h2>New Vehicle Documents</h2>
            </div>
        
            <div class="formcarddetails">
                <p><strong>REQUIRED</strong> <br>
                    Two phone numbers and a required customs paper or receipt (displaying the VIN or chassis number)
                </p>
                
                <p><strong>TIMELINE</strong> <br>
                    With next day delivery, new registration takes 48 hours (but 96 hours with a tint permit).</p>
            </div>
        
            <form action="/document/vehicle-papers" method="POST">
                <h3>Vehicle Details</h3>
                <select name="category" title="Select cars" onchange="if (typeof(this.selectedIndex) != 'undefined') newPapers(this.selectedIndex)" required>
                    <option selected disabled hidden>Select Category of Vehicle</option>
                    <option value="Motorcycle">Motorcycle | Tricycle</option>
                    <option value="Saloon Car-Mini(1.4-1.9L) e.p. Picanto, Corolla, Almera, Civic">Saloon Car-Mini(1.4-1.9L) e.p. Picanto, Corolla, Almera, Civic</option>
                    <option value="Saloon Car-Maxi(2.0-2.6L) e.g. Camry, Benz, Accord, Lexus & Others">Saloon Car-Maxi(2.0-2.6L) e.g. Camry, Benz, Accord, Lexus & Others</option>
                    <option value="SUV | Jeep | Bus | Pick-Up | Crossover">SUV | Jeep | Bus | Pick-Up | Crossover</option>
                    <option value="Coaster Bus">Coaster Bus</span></option>
                    <option value="Truck | Tipper | Trailer">Truck | Tipper | Trailer</option>
                </select>
                <input type="text" name="brand" placeholder="Vehicle Brand e.g. Toyota" value="" title="Vehicle Brand" required>
                <input type="text" name="model" placeholder="Vehicle Model e.g. Corolla" value="" title="Vehicle Model" required>
                <input type="text" name="year" placeholder="Year of Make" value="" title="Year of Make" required>
                <input type="text" name="plateNo" placeholder="Plate Number" value="" title="Plate Number" required>
                <input type="text" name="engineNo" placeholder="Engine Number" value="" title="Engine Number" required>
                <input type="text" name="chassisNo" placeholder="Chassis Number" value="" title="Name" required>
                <input type="text" name="color" placeholder="Select Color" value="" title="Color" required>
                <br><br>
                <h3>Personal Information & Documents</h3>
                <span>Full name | Date of birth | Address</span>
                <input type="text" name="my_name" placeholder="Full Name" title="Your Name" value="{{user.name}}" required>
                <input type="date" name="dob" placeholder="Date of birth" required>
                <input type="text" name="address" placeholder="Contact Address" required>
        
        
                <div class="formcard_upload">
                <h3>Attach Two Required Documents.</h3>
                <ul>
                    <li>Two pages of the Original Custom Papers or Original Local Receipt</li>
                    <li>A Valid ID-Card</li>
                </ul>

                
                </div>
                <input type="file" name="photo" class="filepond pond" title="Upload" required>
        
                <h3>Preferences</h3>
        
                <input type="text" name="doc_name" placeholder="Name to be on Vehicle Documents" required>
                <input type="number" name="phone1" placeholder="Phone Number to register Vehicle" required>
                <input type="number" name="phone2" placeholder="Second Phone Number(required)" required>
                
                <select name="reg_type" id="" title="Registration Type" onchange="if (typeof(this.selectedIndex) != 'undefined') newPapers(null, this.selectedIndex-1)" required>
                    <option hidden selected disabled>Registration Type</option>
                    <option value="Private Vehicle(With 3rd Party Insurance)">Private Vehicle(With 3rd Party Insurance)</option>
                    <option value="Private Vehicle(No Insurance)">Private Vehicle(No Insurance) </option>
                    <option value="Commercial Vehicle(With 3rd Party Insurance)">Commercial Vehicle(With 3rd Party Insurance)</option>
                    <option value="Commercial Vehicle(No Insurance)">Commercial Vehicle(No Insurance)</option>
                </select>
                
                <select name="plate_type" id="" title="Type of Number Plate" required>
                    <option hidden selected disabled>Type of Number Plate</option>
                    <option value="Any Number">Any Number</option>
                    <option value="Special Number Plate">Special Number Plate(e.g. AAAO1DD) </option>
                    <option value="Personalized/Custom Number">Personalized/Custom Number</option>
                </select>
                
                <input type="text" name="location" title="Delivery Location" placeholder="Delivery Location" required>
                <input type="hidden" name="amount" value="" id="amount" required>
                <input type="submit" value="Start Processing(â‚¦ 0)" placeholder="" title="Submit Form">
            </form>
        
        </div>

    </div>

</div>
